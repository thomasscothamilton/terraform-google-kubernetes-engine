#!/bin/bash

cat << EOF > thomasscothamilton-application.yaml
# thomasscothamilton-application.yaml
apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: thomasscothamilton-appproject
  namespace: argocd
spec:
  description: Project for managing the App of Apps
  sourceRepos:
    - https://github.com/thomasscothamilton/thomasscothamilton.git
  destinations:
    - server: https://kubernetes.default.svc
      namespace: "*"
  clusterResourceWhitelist:
    - group: "*"
      kind: "*"
  namespaceResourceWhitelist:
    - group: "*"
      kind: "*"
EOF

echo "thomasscothamilton-appproject.yaml"
#
#cat << EOF > thomasscothamilton-application.yaml
