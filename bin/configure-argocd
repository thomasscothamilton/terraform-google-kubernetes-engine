#echo "thomasscothamilton-application.yaml"

cat << EOF > thomasscothamilton-clusters.yaml
# thomasscothamilton-clusters.yaml
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: thomasscothamilton-clusters
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/thomasscothamilton/thomasscothamilton
    targetRevision: main
    path: clusters
  destination:
    server: https://kubernetes.default.svc
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
EOF

echo "thomasscothamilton-clusters.yaml"

cat << EOF > thomasscothamilton-operators.yaml
# thomasscothamilton-operators.yaml
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: thomasscothamilton-operators
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/thomasscothamilton/thomasscothamilton
    targetRevision: main
    path: clusters
  destination:
    server: https://kubernetes.default.svc
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
EOF

echo "thomasscothamilton-operators.yaml"